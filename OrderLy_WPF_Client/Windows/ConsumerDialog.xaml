<Window x:Class="OrderLy_WPF_Client.ConsumerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderLy_WPF_Client"
        mc:Ignorable="d"
        Title="ConsumerDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Name:" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="TBName" Grid.Row="0" Margin="75,5,5,5"/>
        <TextBlock Text="Product:" Grid.Row="1" Margin="5"/>
        <Button x:Name="TBProduct" Content="Add Product" Grid.Row="1" Margin="75,5,5,5" Click="TBProduct_Click"/>
        <Button Content="OK" Grid.Row="2" Margin="5" HorizontalAlignment="Right" Click="Ok_Click"/>
    </Grid>
</Window>
